<body>
	<h1>My Page</h1>
	<p><%= current_user.name %></p>
	<p><a href="/mypage/<%= current_user.id %>/like">いいね</a></p>

	<div class="container-fluid">
			<div class="row d-flex justify-content-center">
      	<% @posts.each do |post| %>
					<div class="card col-lg-3 mb-4 mx-5">
						<div class="card-body">
							<div class="d-flex justify-content-end align-items-center mt-3">
								<form action="/delete/<%= post.id %>" method="post">
									<input type="submit" value="&#xf2ed;" class="btn card-footer-text">
								</form>
								<a href="/edit/<%= post.id %>" class="btn card-footer-text"><i class="far fa-edit"></i></a>
							</div>
							<p><%= Person.find_by(id: post.person_id).name %></p>
							<%= User.find_by(id: post.user_id).name %><br>
							<% unless post.image.empty? %>
								<p><img class="img-fluid rounded" src="<%= post.image %>"></p>
							<% end %>
							<% post.face_posts.each do |face_post| %>
								<a href="/hashtag/<%= face_post.face_id %>">#<%= Face.find_by(id: face_post.face_id).body %></a>
							<% end %>
							<p><%= post.summary %></p>
							<p><%= post.body %></p>
							<div class="d-flex justify-content-end align-items-center mt-3">
								<span class="card-footer-text"><%= post.likes.size %></span>
								<form action="/good/<%= post.id %>" method="post">
										<input type="submit" value="&#xf004;" class="btn card-footer-text">
								</form>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
</body>