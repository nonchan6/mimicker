<body>
  <h1>#<%= @face.body %></h1>
  <div class="container-fluid">
	  <div class="row d-flex justify-content-center">
      <% @face_posts.each do |face_post| %>
        <div class="card col-lg-3 mb-4 mx-5">
				  <div class="card-body">
            <p><%= Person.find(Post.find(face_post.post_id).person_id).name %></p>
            <p><%= User.find(Post.find(face_post.post_id).user_id).name %></p>
            <% unless Post.find(face_post.post_id).image.empty? %>
			        <p><img class="img-fluid rounded" src="<%= Post.find(face_post.post_id).image %>"></p>
		        <% end %>
            <% Post.find(face_post.post_id).face_posts.each do |face| %>
              <a href="/hashtag/<%= face.face_id %>">#<%= Face.find(face.face_id).body%></a>
            <% end %>
            <p><%= Post.find(face_post.post_id).summary %></p>
            <p><%= Post.find(face_post.post_id).body %></p>
            <div class="d-flex justify-content-end align-items-center mt-3">
						  <span class="card-footer-text"><%= Post.find(face_post.post_id).likes.size %></span>
						  <form action="/good/<%= Post.find(face_post.post_id).id %>" method="post">
							  <input type="submit" value="&#xf004;" class="btn card-footer-text">
							</form>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>